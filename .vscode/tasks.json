{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "command": "node",
      "args": [
        "node_modules/mocha/bin/mocha",
        "-r",
        "ts-node/register",
        "src/tests/*.spec*",
        "--colors",
        // "--reporter",
        // "json",
      ],
      "label": "mocha",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      // "isBackground": true,
      "problemMatcher": {
        "owner": "mocha",
        "severity": "error",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": [
          {
            "regexp": "^.*stack.:..(.*)\\\\.*\\((.*):(\\d+):(\\d+).*$",
            "message": 1,
            "file": 2,
            "line": 3,
            "column": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*failures.*$",
          "endsPattern": "^.*passes.*$"
        }
      }
    },
  ]
}
